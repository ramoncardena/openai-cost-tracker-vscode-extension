{
  "name": "openai-cost-tracker",
  "displayName": "OpenAI Cost Tracker",
  "description": "Track usage and cost of OpenAI API calls within VS Code.",
  "version": "0.0.1",
  "author": {
    "name": "Ramon Cardena",
    "url": "https://github.com/ramoncardena"
    },
  "engines": {
    "vscode": "^1.85.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [],
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "openai-cost-tracker.helloWorld",
        "title": "Hello World"
      },
      {
        "command": "openai-cost-tracker.setApiKey",
        "title": "Set API Key",
        "category": "OpenAI Cost Tracker"
      },
      {
        "command": "openai-cost-tracker.showCost",
        "title": "Show Current Month Cost",
        "category": "OpenAI Cost Tracker"
      }
    ],
    "configuration": {
      "title": "OpenAI Cost Tracker",
      "properties": {
        "openaiCostTracker.refreshInterval": {
          "type": "number",
          "default": 60,
          "description": "Interval in minutes to refresh the cost data.",
          "minimum": 5
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "webpack",
    "watch": "webpack --watch",
    "package": "webpack --mode production --devtool hidden-source-map",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "npm run compile-tests && npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/vscode": "^1.85.0",
    "@types/glob": "^8.1.0",
    "@types/mocha": "^10.0.6",
    "@types/node": "18.x",
    "@typescript-eslint/eslint-plugin": "^6.13.1",
    "@typescript-eslint/parser": "^6.13.1",
    "eslint": "^8.54.0",
    "glob": "^8.1.0",
    "mocha": "^10.2.0",
    "typescript": "^5.3.2",
    "ts-loader": "^9.5.1",
    "webpack": "^5.89.0",
    "webpack-cli": "^5.1.4",
    "@vscode/test-electron": "^2.3.8"
  }
}
